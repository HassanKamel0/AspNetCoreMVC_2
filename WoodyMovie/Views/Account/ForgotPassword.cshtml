@model ForgotPasswordVM
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["ForgotPassword"];
}
<main>
    <section id="mu-contact">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="mu-contact-area">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="mu-title">
                                    <h2>@Localizer["ForgotPassword"]</h2>
                                </div>
                            </div>
                        </div>
                        <div class="mu-contact-content">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mu-contact-form-area">
                                        <div id="form-messages"></div>
                                        <form id="contact" method="post" class="mu-contact-form" asp-action="ForgotPassword">
                                            <div class="form-group">
                                                <span class="fa fa-envelope mu-contact-icon"></span>
                                                <input type="email" asp-for="Email" class="form-control" placeholder="@Localizer["Email"]" id="email" name="email" required>
                                                <span asp-validation-for="Email" class="text-danger"></span>
                                            </div>
                                            <button type="submit" class="mu-send-msg-btn"><span>@Localizer["Reset"]</span></button>
                                            <a class="mu-send-msg-btn" asp-action="Login">@Localizer["Back"]</a>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</main>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   }